<h1>New race</h1>

<% form_for(@race) do |f| %>
  <%= f.error_messages %>
  
  <p>Current trends on Twitter:</p>
  <ul>
    <% @trends.each do |trend| %>
    <li>
      <%=h trend %>
    </li>
    <% end %>
  </ul>

  <p>
    <%= f.label :term1 %><br />
    <%= f.text_field :term1 %>
  </p>
  <p>
    <%= f.label :term2 %><br />
    <%= f.text_field :term2 %>
  </p>
